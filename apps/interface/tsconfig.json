{
    "compilerOptions": {
        "target": "es5",
        "lib": ["dom", "dom.iterable", "esnext"],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noEmit": true,
        "incremental": true,
        "esModuleInterop": true,
        "module": "esnext",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "moduleResolution": "node",
        "baseUrl": "./",
        "paths": {
            "@/*": ["*"]
        }
    },
    "include": [
        "next-env.d.ts",
        "worker.d.ts",
        "pages/**/*.ts",
        "pages/**/*.tsx",
        "tests/**/*.ts",
        "tests/**/*.tsx"
    ],
    "exclude": [
        "node_modules",
        "router/**/*.tsx",
        "controllers/**/*.tsx",
        "templates/**/*.tsx",
        "atoms/**/*.tsx",
        "molecules/**/*.tsx",
        "organisms/**/*.tsx"
    ]
}
