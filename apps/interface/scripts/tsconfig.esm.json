{
    "compilerOptions": {
        /* Type Checking */
        "strict": true,

        /* Modules */
        "module": "ES2022",
        "moduleResolution": "node",
        "baseUrl": "../",
        "paths": {
            "@/*": ["*"]
        },

        /* Emit */
        "outDir": "build",

        /* Interop constraints */
        "esModuleInterop": true,

        /* Language and Environment */
        "target": "ES2022"
    },
    "include": ["./**/*.mts"],
    "exclude": ["build"]
}
