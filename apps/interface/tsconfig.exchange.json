{
    "compilerOptions": {
        /* Language and Environment */
        "target": "es2021",
        "lib": ["es2021", "dom"],
        "jsx": "react",

        /* Modules */
        "module": "es2022",
        "moduleResolution": "node",
        "baseUrl": "./",
        "paths": {
            "~/*": ["*"]
        },
        "resolveJsonModule": true,

        /* JavaScript Support */
        "allowJs": true,
        "checkJs": true,

        /* Emit */
        "noEmit": true,

        /* Interop Constraints */
        "esModuleInterop": true,
        "isolatedModules": true,
        "forceConsistentCasingInFileNames": true,

        /* Type Checking */
        "strict": true,
        "noUnusedLocals": true
    },
    "include": [
        "worker.d.ts",
        "entrypoint.server.ts",
        "app/**/*.tsx",
        "route/**/*.ts",
        "controller/**/*.ts",
        "atoms/**/*.tsx",
        "atoms/**/*.ts",
        "molecules/**/*.tsx",
        "organisms/**/*.tsx",
        "templates/**/*.tsx"
    ],
    "exclude": ["node_modules"]
}
