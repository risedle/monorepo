{
    "name": "api",
    "version": "1.1.0",
    "private": true,
    "main": "dist/index.js",
    "scripts": {
        "build": "tsc",
        "check": "prettier --check .",
        "lint": "eslint .",
        "test": "jest --testTimeout 20000",
        "test:ci": "CI=true jest --reporters=default --reporters=github-actions",
        "dev:server": "node dist/index.js",
        "dev": "nodemon"
    },
    "dependencies": {
        "@risedle/chains": "1.2.0",
        "@risedle/types": "1.9.0",
        "@sentry/node": "7.1.1",
        "cors": "2.8.5",
        "dotenv": "16.0.1",
        "ethers": "5.6.8",
        "ethers-multicall": "0.2.3",
        "express": "4.18.1",
        "express-validator": "6.14.1",
        "graphql": "16",
        "graphql-request": "4.3.0",
        "morgan": "1.10.0",
        "pg": "8.7.3",
        "swagger-ui-express": "4.4.0",
        "typeorm": "0.3.6",
        "yamljs": "0.3.0"
    },
    "devDependencies": {
        "@jest-mock/express": "2.0.0",
        "@jest/types": "28.1.3",
        "@risedle/eslint-config": "0.1.0",
        "@risedle/prettier-config": "0.1.0",
        "@risedle/tsconfig": "0.2.0",
        "@types/cors": "2.8.12",
        "@types/express": "4.17.13",
        "@types/jest": "29.0.0",
        "@types/morgan": "1.9.3",
        "@types/node": "17.0.43",
        "@types/supertest": "2.0.12",
        "@types/swagger-ui-express": "4.1.3",
        "@types/yamljs": "0.2.31",
        "eslint": "8.23.0",
        "jest": "28.1.1",
        "nodemon": "2.0.16",
        "prettier": "2.7.1",
        "supertest": "6.2.3",
        "ts-jest": "28.0.8",
        "ts-node": "10.9.1",
        "typescript": "4.8.2",
        "update-notifier": "5.1.0"
    },
    "prettier": "@risedle/prettier-config",
    "nodemonConfig": {
        "exec": "NODE_ENV=development npm run build && npm run dev:server",
        "watch": "./src",
        "ext": "ts",
        "ignore": [
            ".git",
            "node_modules",
            "dist"
        ]
    }
}
