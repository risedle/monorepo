{
    "name": "@risedle/chains",
    "version": "1.0.0",
    "license": "MIT",
    "source": "src/index.ts",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "files": [
        "dist",
        "README.md"
    ],
    "scripts": {
        "clean": "rm -rf dist",
        "build": "tsc",
        "lint": "eslint src/*.ts",
        "test": "jest"
    },
    "prepublish": "tsc",
    "homepage": "https://risedle.com",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/risedle/monorepo.git"
    },
    "bugs": {
        "url": "https://github.com/risedle/monorepo/issues"
    },
    "author": {
        "name": "bayu",
        "email": "bayu@risedle.com",
        "url": "https://github.com/pyk"
    },
    "contributors": [],
    "devDependencies": {
        "@semantic-release/git": "10.0.1",
        "semantic-release": "19.0.3"
    },
    "release": {
        "tagFormat": "@risedle/chains-v${version}",
        "branches": [
            "main"
        ],
        "plugins": [
            [
                "@semantic-release/commit-analyzer",
                {
                    "preset": "conventionalcommits",
                    "releaseRules": [
                        {
                            "scope": "!*@risedle/chains*",
                            "release": false
                        },
                        {
                            "breaking": true,
                            "release": false
                        },
                        {
                            "scope": "@risedle/chains",
                            "type": "bump",
                            "release": "major"
                        }
                    ]
                }
            ],
            [
                "@semantic-release/npm",
                {
                    "tarballDir": "."
                }
            ],
            [
                "@semantic-release/github",
                {
                    "successComment": false,
                    "failedComment": false,
                    "assets": [
                        {
                            "path": "*.tgz",
                            "label": "@risedle/chains"
                        }
                    ],
                    "labels": false
                }
            ],
            [
                "@semantic-release/git",
                {
                    "message": "chore(release): @risedle/chains ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
                }
            ]
        ]
    },
    "dependencies": {
        "@risedle/types": "1.0.2"
    },
    "exports": {
        "./*": "./dist/*.js"
    }
}
