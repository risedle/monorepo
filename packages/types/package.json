{
    "name": "@risedle/types",
    "version": "1.9.0",
    "license": "MIT",
    "source": "src/index.ts",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "files": [
        "dist",
        "README.md"
    ],
    "prepublish": "tsc",
    "homepage": "https://risedle.com",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/risedle/monorepo.git"
    },
    "bugs": {
        "url": "https://github.com/risedle/monorepo/issues"
    },
    "author": {
        "name": "bayu",
        "email": "bayu@risedle.com",
        "url": "https://github.com/pyk"
    },
    "contributors": [
        {
            "email": "adam@risedle.com",
            "name": "Adam",
            "url": "https://github.com/asaadam"
        }
    ],
    "scripts": {
        "check": "prettier --check .",
        "lint": "eslint .",
        "build": "tsc",
        "clean": "rm -rf dist"
    },
    "devDependencies": {
        "@risedle/eslint-config": "workspace:*",
        "@risedle/prettier-config": "workspace:*",
        "@risedle/tsconfig": "workspace:*",
        "@semantic-release/git": "10.0.1",
        "eslint": "8.23.0",
        "prettier": "2.7.1",
        "semantic-release": "19.0.3",
        "typescript": "4.8.2"
    },
    "prettier": "@risedle/prettier-config",
    "release": {
        "tagFormat": "@risedle/types-v${version}",
        "branches": [
            "main"
        ],
        "plugins": [
            [
                "@semantic-release/commit-analyzer",
                {
                    "preset": "conventionalcommits",
                    "releaseRules": [
                        {
                            "scope": "!*@risedle/types*",
                            "release": false
                        },
                        {
                            "breaking": true,
                            "release": false
                        },
                        {
                            "scope": "@risedle/types",
                            "type": "bump",
                            "release": "major"
                        }
                    ]
                }
            ],
            [
                "@semantic-release/npm",
                {
                    "tarballDir": "."
                }
            ],
            [
                "@semantic-release/github",
                {
                    "successComment": false,
                    "failedComment": false,
                    "assets": [
                        {
                            "path": "*.tgz",
                            "label": "@risedle/types"
                        }
                    ],
                    "labels": false
                }
            ],
            [
                "@semantic-release/git",
                {
                    "message": "chore(release): @risedle/types ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
                }
            ]
        ]
    },
    "exports": {
        ".": "./dist/index.js",
        "./*": "./dist/*.js"
    },
    "publishConfig": {
        "registry": "https://registry.npmjs.org/",
        "tag": "latest"
    }
}
