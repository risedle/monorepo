{
    "name": "@risedle/ui",
    "version": "1.0.0",
    "license": "MIT",
    "source": "src/index.ts",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "files": [
        "dist",
        "README.md"
    ],
    "scripts": {
        "clean": "rm -rf dist",
        "build": "tsc",
        "lint": "eslint src/**/*.ts*"
    },
    "prepublish": "tsc",
    "homepage": "https://risedle.com",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/risedle/monorepo.git"
    },
    "bugs": {
        "url": "https://github.com/risedle/monorepo/issues"
    },
    "author": {
        "name": "bayu",
        "email": "bayu@risedle.com",
        "url": "https://github.com/pyk"
    },
    "contributors": [],
    "devDependencies": {
        "@types/react": "^17.0.37",
        "@types/react-dom": "^17.0.11",
        "eslint": "^7.32.0",
        "eslint-config-custom": "*",
        "react": "^17.0.2",
        "tsconfig": "*",
        "typescript": "^4.5.2",
        "@semantic-release/git": "10.0.1",
        "semantic-release": "19.0.3"
    },
    "release": {
        "tagFormat": "@risedle/ui-v${version}",
        "branches": [
            "main"
        ],
        "plugins": [
            [
                "@semantic-release/commit-analyzer",
                {
                    "preset": "conventionalcommits",
                    "releaseRules": [
                        {
                            "scope": "!*@risedle/ui*",
                            "release": false
                        },
                        {
                            "breaking": true,
                            "release": false
                        },
                        {
                            "scope": "@risedle/ui",
                            "type": "bump",
                            "release": "major"
                        }
                    ]
                }
            ],
            [
                "@semantic-release/npm",
                {
                    "tarballDir": "."
                }
            ],
            [
                "@semantic-release/github",
                {
                    "successComment": false,
                    "failedComment": false,
                    "assets": [
                        {
                            "path": "*.tgz",
                            "label": "@risedle/ui"
                        }
                    ],
                    "labels": false
                }
            ],
            [
                "@semantic-release/git",
                {
                    "message": "chore(release): @risedle/ui ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
                }
            ]
        ]
    }
}
